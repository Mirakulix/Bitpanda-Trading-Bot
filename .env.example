# Environment Configuration
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS & Security
ALLOWED_HOSTS=localhost,127.0.0.1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Database Configuration
DATABASE_URL=postgresql+asyncpg://trading_user:your-password@localhost:5432/trading_bot
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# Message Broker
RABBITMQ_URL=amqp://trading_user:your-rabbitmq-password@localhost:5672/trading
RABBITMQ_USER=trading_user
RABBITMQ_PASSWORD=your-rabbitmq-password

# Bitpanda API (Production Keys - Keep Secret!)
BITPANDA_API_KEY=your-bitpanda-api-key
BITPANDA_API_SECRET=your-bitpanda-api-secret
BITPANDA_BASE_URL=https://api.exchange.bitpanda.com
BITPANDA_SANDBOX=true

# AI Services
# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# DeepSeek
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Ollama (Local AI)
OLLAMA_ENDPOINT=http://localhost:11434

# External Data APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
COINGECKO_API_KEY=your-coingecko-key
NEWS_API_KEY=your-news-api-key
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Trading Configuration
PAPER_TRADING_MODE=true
MAX_DAILY_TRADES=50
MIN_TRADE_AMOUNT=10.0
MAX_POSITION_SIZE=0.2
DEFAULT_STOP_LOSS=0.05
DEFAULT_TAKE_PROFIT=0.15

# Risk Management
MAX_PORTFOLIO_RISK=0.15
VAR_CONFIDENCE_LEVEL=0.95

# Monitoring & Observability
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Grafana (for monitoring)
GRAFANA_PASSWORD=your-grafana-password

# PostgreSQL (for docker-compose)
POSTGRES_PASSWORD=your-postgres-password