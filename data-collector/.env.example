# Data Collector Service Environment Variables

# ================================
# DATABASE CONFIG
# ================================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/bitpanda_trading

# ================================
# REDIS CONFIG
# ================================
REDIS_URL=redis://localhost:6379/0

# ================================
# COLLECTION INTERVALS (seconds)
# ================================
MARKET_DATA_INTERVAL=60
NEWS_COLLECTION_INTERVAL=900
SENTIMENT_COLLECTION_INTERVAL=1800
HEALTH_CHECK_INTERVAL=300

# ================================
# TRADING DATA CONFIG
# ================================
TRACKED_SYMBOLS=["BTC/USDT","ETH/USDT","ADA/USDT","DOT/USDT","MATIC/USDT"]
EXCHANGES=["bitpanda","binance","coinbase"]

# ================================
# API KEYS (Optional - for enhanced data collection)
# ================================

# Bitpanda Pro API
BITPANDA_API_KEY=

# Market Data APIs
COINMARKETCAP_API_KEY=
COINGECKO_API_KEY=
ALPHA_VANTAGE_API_KEY=

# News APIs
NEWS_API_KEY=

# Social Media APIs
TWITTER_BEARER_TOKEN=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=BitpandaBot:v1.0 (by u/tradingbot)

# ================================
# DATA RETENTION
# ================================
RAW_DATA_RETENTION_DAYS=30
PROCESSED_DATA_RETENTION_DAYS=365

# ================================
# RATE LIMITING
# ================================
MAX_REQUESTS_PER_MINUTE=100
REQUEST_DELAY_SECONDS=1.0

# ================================
# SENTIMENT ANALYSIS CONFIG
# ================================
SENTIMENT_KEYWORDS=["bitcoin","ethereum","crypto","cryptocurrency","DeFi","NFT"]
SENTIMENT_SUBREDDITS=["cryptocurrency","bitcoin","ethereum","CryptoMarkets","altcoin"]

# ================================
# TECHNICAL INDICATORS
# ================================
TECHNICAL_INDICATORS=["RSI","MACD","SMA","EMA","Bollinger_Bands","Volume"]
TIMEFRAMES=["1m","5m","15m","1h","4h","1d"]

# ================================
# LOGGING & MONITORING
# ================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=8001

# ================================
# ERROR HANDLING
# ================================
MAX_RETRY_ATTEMPTS=3
BACKOFF_FACTOR=2.0
ERROR_ALERT_THRESHOLD=5